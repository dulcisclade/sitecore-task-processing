            <configurations>
                <configuration name="Foundation.Blogs" description="Foundation Blogs" dependencies="Foundation.Serialization" extends="Helix.Foundation">
                  <predicate>
                    <include name="Tasks" database="master" path="/sitecore/system/Tasks" />
